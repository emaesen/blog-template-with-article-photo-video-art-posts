{
  "kind": "singleType",
  "collectionName": "globals",
  "info": {
    "name": "Global"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "siteName": {
      "type": "string",
      "required": true
    },
    "contactEmail": {
      "type": "string"
    },
    "siteLanguage": {
      "type": "string",
      "default": "en",
      "maxLength": 2
    },
    "favicon": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "author": {
      "type": "component",
      "repeatable": false,
      "component": "elements.person"
    },
    "organization": {
      "type": "component",
      "repeatable": true,
      "component": "elements.organization"
    },
    "otherWebsites": {
      "type": "component",
      "repeatable": true,
      "component": "elements.other-websites"
    },
    "rightsText": {
      "type": "string",
      "default": "All rights reserved"
    }
  }
}
