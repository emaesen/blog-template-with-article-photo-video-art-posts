{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "Article"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "text"
    },
    "content": {
      "type": "dynamiczone",
      "components": [
        "sections.rich-text",
        "sections.large-media",
        "sections.images-slider"
      ]
    },
    "coverImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "categories": {
      "collection": "category",
      "via": "articles",
      "dominant": true
    },
    "publicationDate": {
      "type": "date",
      "required": true
    }
  }
}
