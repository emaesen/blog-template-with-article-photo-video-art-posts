{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "Article"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "text"
    },
    "content": {
      "type": "richtext"
    },
    "coverImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload"
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "categories": {
      "collection": "category",
      "via": "articles",
      "dominant": true
    },
    "date": {
      "type": "date"
    },
    "publicationDate": {
      "type": "date"
    },
    "notes": {
      "via": "articles",
      "collection": "note"
    }
  }
}
